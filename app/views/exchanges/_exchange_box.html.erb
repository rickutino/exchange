<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-header text-center'>
      為替レート計算
    </div>

    <div class='card-block'>
      <%= form_with url: "/convert", method: :get, id: 'exchange_form' do |f| %>
        <div class='local_currency'>
          <div class='form-group'>
            <p class='title'>手元にある通貨:</p>
            <%= f.select 'source_currency', options_for_select(currency_list, 'USD'), {}, { class: 'form-control', id: 'source_currency' } %>
          </div>

          <div class='form-group'>
            <%= f.number_field 'amount', id: 'amount', class: 'form-control', placeholder: 'Amount ($10)', step: 'any', required: true %>
          </div>
        </div>
                    
        <div class='destination_currency'>
          <div class='form-group'>
            <p class='title'>必要な通貨:</p>
            <%= f.select 'target_currency', options_for_select(currency_list, 'JPY'), {}, { class: 'form-control', id: 'target_currency' } %>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control' placeholder='Result' readonly>
          </div>
        </div>
        <div>
          <%= f.submit "計算する", class: 'btn btn-primary btn-exchange col-md-12' %>
        </div>
      <% end %>
    </div>
  </div>
</div>